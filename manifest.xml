        <bt:Image id="Icon.80x80" DefaultValue="https://YOUR_VERCEL_URL/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="GetStarted.LearnMoreUrl" DefaultValue="https://www.contoso.com/help"/> <!-- 你可以换成自己的帮助页面 -->
        <bt:Url id="Commands.Url" DefaultValue="https://YOUR_VERCEL_URL/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://YOUR_VERCEL_URL/taskpane.html"/>
      </bt:Urls>
      <!-- 【已修改】更新了所有按钮和提示的文本，让它更符合你的插件 -->
      <bt:ShortStrings>
        <bt:String id="GetStarted.Title" DefaultValue="学术罗盘已成功加载!"/>
        <bt:String id="CommandsGroup.Label" DefaultValue="学术罗盘"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="开始分析"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="GetStarted.Description" DefaultValue="你的专属学术与职业生涯规划助手。点击“开始分析”按钮即可启动。"/>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="点击这里打开学术罗盘，开始你的生涯规划分析。"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
